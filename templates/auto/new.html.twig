{% extends 'base.html.twig' %}

{% block title %}Création d'une auto{% endblock %}

 
{% block body %}

    <div class="container">
        <h1 class="my-5">Créer une nouvelle auto</h1>

        {{ form_start(form) }}

         

        <div class="alert alert-success clearfix">
            <h2 class="alert-heading">Sauvegarder mon auto</h2>
            <p>Vous êtes sur le point de créer votre auto, nous sommes super fier de vous !</p>
            <button type="submit" class="btn btn-primary float-right">
                <i class="fas fa-check"></i>
                Créer la nouvelle Auto
            </button>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

 
